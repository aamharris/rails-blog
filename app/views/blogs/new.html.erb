<% provide(:title, "New Blog") %>
<h1>Start your new Blog</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@blog) do |f| %>
		  <%= f.label :name %>
		  <%= f.text_field :name %>

		  <%= f.label :description %>
		  <%= f.text_field :description %>

		  <%= f.submit  "Create Blog", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
