<% provide(:title, "New Post") %>
<h1>New Blog Post</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for [@blog, @post] do |f| %>
		  <%= f.label :title %>
		  <%= f.text_field :title %>

		  <%= f.label :body %>
		  <%= f.text_field :body %>

		  <%= f.submit  "Publish Post", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
